{% extends 'base.html.twig' %}
{% block title %}Bienvenido@{% endblock title %}
{% block invar %} {{parent()}}
{% endblock invar %}
{% block contenido %}

<h1> Cargar Archivos <hr></h1>
<form action="./cargarArchivo.php" method="post" enctype="multipart/form-data">
  <div class="form-row">
    <div class="form-group col-md-2">
      <input type="text" readonly class="form-control-plaintext" id="staticEmail2" value="Seleccione archivo">
    </div>
    <div class="form-group col-md-10">
      <input type="hidden" name="MAX_FILE_SIZE" value="2000000">
      <input type="file" name="file_upload" value="Buscar archivo"><br><br>
    </div>
  </div>
  <!-- Button trigger modal -->
  <button type="button" class="btn btn-danger float-right" onclick="history.go(-1); return false;">Volver</button>
  <button type="button" class="btn btn-primary float-right" data-toggle="modal" data-target="#confirmar">Subir archivo</button>
  <!-- Modal -->
  <div class="modal fade" id="confirmar" tabindex="-1" role="dialog" aria-labelledby="confirmarLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="confirmarLabel">Confirmación carga archivo</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Volver">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          ¿Está seguro que desea cargar el archivo?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
          <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
      </div>
    </div>
  </div>
  <!-- <button type="submit" class="btn btn-primary mb-2" name="submit" value="SubirArchivo">Cargar</button> -->
</form>

{% endblock contenido %}
